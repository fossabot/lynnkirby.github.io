{
  "compileOnSave": false,
  "compilerOptions": {
    // @babel/plugin-transform-typescript is used to compile.
    "noEmit": true,

    // Must be set due to the way Babel transpiles imports.
    "allowSyntheticDefaultImports": true,

    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ]
  },
  "exclude": [
    "dist/**/*",
    "public/**/*",
    "node_modules"
  ]
}
